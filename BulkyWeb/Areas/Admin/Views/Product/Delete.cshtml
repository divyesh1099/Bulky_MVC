@model Product
<form method="post" style="padding-bottom: 100px;">
    <input asp-for="Id" hidden disabled type="text" />
    <div class="border-pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label asp-for="Title" class="ms-2"></label>
            <input asp-for="Title" class="form-control border-0 shadow" disabled />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Description" class="ms-2"></label>
            <input asp-for="Description" class="form-control border-0 shadow" disabled />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="ISBN" class="ms-2"></label>
            <input asp-for="ISBN" class="form-control border-0 shadow" disabled />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="Author" class="ms-2"></label>
            <input asp-for="Author" class="form-control border-0 shadow" disabled />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="ListPrice" class="ms-2"></label>
            <input asp-for="ListPrice" class="form-control border-0 shadow" disabled />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="Price" class="ms-2"></label>
            <input asp-for="Price" class="form-control border-0 shadow" disabled />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="Price50" class="ms-2"></label>
            <input asp-for="Price50" class="form-control border-0 shadow" disabled />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="Price100" class="ms-2"></label>
            <input asp-for="Price100" class="form-control border-0 shadow" disabled />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control" style="width:150px">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control" style="width: 150px">Back To List</a>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
            }